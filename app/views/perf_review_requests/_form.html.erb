<%= form_tag perf_review_requests_path, html: {remote: true} do %>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <label> Emplyee to be Revieweed </label>
      <%= select_tag "reviewee_id", options_for_select(Employee.all.collect { |emp| [emp.email, emp.id] }), class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <label>Select multiple reviewers</label>
      <%= select_tag "reviewer_id", options_for_select(Employee.all.where.not(id: current_employee.id).collect { |emp| [emp.email, emp.id] }), multiple: true, class: "form-control",required: true %>
    </div>
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <div class="form-line">
        <label>Job title</label>
        <%= text_field_tag "job_title", "", class: "form-control" %>
      </div>
    </div>  
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <div class="form-line">
        <label>Time in position</label>
        <%= text_field_tag "time_in_position", "", class: "form-control" %>
      </div>
    </div>  
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <div class="form-line">
        <label>Last appraisal</label>
        <%= text_field_tag "last_appraisal", "", class: "form-control datepicker" %>
      </div>
    </div>  
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <div class="form-line">
        <label>First prepared</label>
        <%= text_field_tag "first_prepared", "", class: "form-control datepicker",required: true %>
      </div>
    </div>  
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <div class="form-line">
        <label>Hiring date</label>
        <%= text_field_tag "hiring_date", "", class: "form-control datepicker",required: true %>
      </div>
    </div>  
  </div>

  <div class="col-sm-4 col-xs-4">
    <div class="form-group form-float">
      <div class="form-line">
        <label>Due date</label>
        <%= text_field_tag "due_date", "", class: "form-control datepicker",required: true %>
      </div>
    </div>  
  </div>


  <div class="col-sm-4 col-xs-4">
    <div class="actions">
      <%= submit_tag "Create", class: "btn btn-primary waves-effect" %>
    </div>
  </div>
<% end %>

