<%= form_for(exam) do |f| %>
  <% if exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
      <% exam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.text_field :title, class: "form-control" %>
        <%= f.label :title, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.select :subject_id, Subject.all.collect {|s| [ s.title, s.id ] }, {}, class: "form-control show-tick" %>
        <%#= f.label :subject, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.select :team_id, Team.all.collect {|s| [ s.name, s.id ] }, {}, class: "form-control show-tick" %>
        <%#= f.label :team, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.number_field :marks, class: "form-control", min: "0" %>
        <%= f.label :marks, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.number_field :cut_off_marks, class: "form-control", min: "0" %>
        <%= f.label :cut_off_marks, class: "form-label" %>
      </div>
    </div>
  </div>
  
  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.number_field :time, class: "form-control", min: "0" %>
        <%= f.label :time, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.check_box :state, class: " filled-in" %>
        <%= f.label :state, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="col-sm-12 col-xs-12 mat-top-10">
    <div class="actions">
      <%= f.submit "#{action}", class: "btn btn-primary" %>
    </div>
  </div>  
<% end %>
