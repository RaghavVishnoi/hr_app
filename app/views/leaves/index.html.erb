<div class="row">
  <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
    <div class="table-responsive">
      <p id="notice"><%= notice %></p>

      <h1>Leaves</h1>

      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Body</th>
            <th>From date</th>
            <th>To date</th>
            <th>assigned_to type</th>
            <th>Correge</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @leaves ||= [] %>
          <% @leaves.each do |leafe| %>
            <tr>
              <td><%= leafe.subject %></td>
              <td><%= leafe.body %></td>
              <td><%= leafe.from_date %></td>
              <td><%= leafe.to_date %></td>
              <td><%= leafe.assigned_to %></td>
              <td><%= leafe.employee_id %></td>
              <td><%= link_to 'Show', leafe %></td>
              <td><%= link_to 'Edit', edit_leafe_path(leafe) %></td>
              <td><%= link_to 'Destroy', leafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Add Leave', new_leafe_path unless current_employee.president? %>
    </div>
  </div>
</div>
