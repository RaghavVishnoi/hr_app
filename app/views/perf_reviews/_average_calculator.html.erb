<div id="avgCalculator" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Average Calculator</h4>
      </div>
      <hr>
      <div class="modal-body">
        <p>Please enter value</p>
        <div class="calculator-values">
        	<p><input type="text" id="cal-0" class="avg-field-value"></p>
        </div>
        <p class="avgCalAction">
        	<span onclick="addNewCalField()"><i class="fa fa-plus" aria-hidden="true"></i></span>
        	<span onclick="removeNewCalField()"><i class="fa fa-minus" aria-hidden="true"></i></span>
        </p>	
        <br>
        <p>Please enter total records count</p>
        <p><input type="number" id="recordCount"></p>
        
        <p>Average: <span class="avgTotal"></span></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" onclick="calculateFinalAvg()">Calculate</button>
      </div>
    </div>

  </div>
</div>