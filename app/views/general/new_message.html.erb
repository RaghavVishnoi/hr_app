<% if current_employee.user_role == 'hr' || current_employee.user_role == 'president' %>
  <div class="row clearfix">
    <div class="col-sm-12">
      <div class="card">
        <div class="header">
          <h2>New Message</h2>
        </div>
        <div class="body">
          <div class="row clearfix">
            <div class="col-sm-12">
              <div class="col-sm-6 col-xs-12">
                <div class="form-group form-float">
                  <div class="form-line">
                    <%= text_field_tag :message, "", class: "form-control", id: "boradcast_msg" %>
                    <%= label_tag :message, "Message", class: "form-label" %>
                  </div>
                </div>
              </div>
              <div class="actions">
                <%= submit_tag "Create Exam", class: "btn btn-primary", id: "send_message" %>
              </div>
            </div>
          </div>
          <div class="mt20">
            <%= link_to 'Back', exams_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row clearfix">
  <div class="col-sm-12">
    <div class="card">
      <div class="header">
        <h2>New Message</h2>
      </div>
      <div class="body">
        <div class="row clearfix">
          <div class="col-sm-12">
            <div class="body table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>
                <tbody id="cast_messages">
                  <% @messages.each do |msg| %>
                    <%= render partial: "general/message", locals: { msg: msg }  %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>