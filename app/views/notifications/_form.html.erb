<%= form_for(notification) do |f| %>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.label :send_to %>
        <br />
        <%= f.select :employee_id, [["All",""]]+Employee.all.collect {|r| [ r.name, r.id ] }, {}, class: "form-control" %>
      </div>
    </div>
  </div>	

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control",required: true %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.label :subject %>
        <%= f.text_field :notification_type, class: "form-control",required: true %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-xs-12">
    <div class="form-group form-float">
      <div class="form-line">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control",required: true %>
      </div>
    </div>
  </div>

  <div class="col-sm-12 col-xs-12">
    <div class="form-group form-float">
      <div class="actions">
        <%= f.submit "Submit", class: "btn bg-blue"%>
      </div>
    </div>
  </div>
 
<% end %>


