<div class="row">
  <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
    <div class="table-responsive">
      <h1 class="pull-left">Employees - Exams</h1>
      <p class="pull-right">
        <%= link_to "Export to CSV", export_to_csv_path(format: :csv) %>
      </p>
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Exam</th>
            <th>Attemted?</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <% employee.exams.each do |exam| %>
              <% attemted = exam.is_attemted_by(employee) %>
              <tr>
                <td> <%= attemted ? link_to(employee.fullname, show_exam_attempte_path(employee)) : employee.fullname %> </td>
                <td> <%= exam.title %> </td>
                <td> <%= attemted %> </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>