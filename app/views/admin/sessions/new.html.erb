<div class="row clearfix">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="card">
      <div class="bory">
        <div class="authentication-box">
          <h2>Log in</h2>
          
          <%= form_for(resource, as: resource_name, url: admin_session_path_url) do |f| %>
            <div class="col-xs-12">
              <div class="form-group form-float">
                <div class="form-line">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: 'form-control mb20' %>
                </div>
              </div>
            </div>

            <div class="col-xs-12">
              <div class="form-group form-float">
                <div class="form-line">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control mb20' %>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field col-xs-12 mb20">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions col-sm-6 col-xs-12 mb20">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>