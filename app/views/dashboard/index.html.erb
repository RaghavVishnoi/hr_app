<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
    Dashboard
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-pencil fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @exams.try(:count) || 0 %></div>
            <div>All Exams</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if current_employee.user_role != 'employee' %>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-calendar-check-o fa-5x" aria-hidden="true"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%= @active_exams.try(:count) || 0 %></div>
              <div>Active Exams</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-calendar-check-o fa-5x" aria-hidden="true"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%= @results.try(:count) || 0 %></div>
              <div>Attemted Exam</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-calendar-times-o fa-5x" aria-hidden="true"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%= (@exams.try(:count) || 0) - ( @results.try(:count) || 0 )%></div>
              <div>UpAttemted Exam</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>