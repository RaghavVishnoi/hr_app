<div class="row clearfix">
  <div class="col-xs-12">
    <div class="card">
      <div class="header">
        <h2>New Project Team</h2>
      </div>
      <div class="body">
        <div class="row clearfix">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <%= form_for(@project_team) do |f| %>
              <% if @project_team.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@project_team.errors.count, "error") %> prohibited this project from being saved:</h2>
                  <ul>
                    <% @project_team.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group form-float">
                  <div class="form-line">
                    <%= f.label :name, class: "form-label" %>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                </div>
              </div>
              
              
              <div class="actions col-sm-6 col-xs-12 pull-right">
                <%= f.submit "Add Team", class: "btn bg-cyan waves-button-input" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>