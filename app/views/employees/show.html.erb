<div class="row employee-view">
  <div class="col-xs-12">
    <h3>
    <p id="notice"><%= notice %></p>
    <div class="col-xs-12">
      <strong>employee:</strong>
      <%= @employee.name %>
    </div>
    <div class=" col-md-4 col-sm-6 col-xs-12">
      <strong>Email:</strong>
      <%= @employee.email %>
    </div>
    <div class=" col-md-4 col-sm-6 col-xs-12">
      <strong>Role:</strong>
      <%= @employee.user_role %>
    </div>
    </h3>
  </div>
</div>

<%= link_to 'Edit', edit_employee_path(@employee) %> |
<%= link_to 'Back', employees_path %>
<hr/>

<div class="row ">
  <div class="col-xs-12">
    <%= form_for(@employee, url: upload_document_path(@employee), method: :post, html: { multipart: true }) do |f| %>
      <%= f.label :documents, :class => 'control-label' %>
        <div class="controls">
      <%= file_field_tag "documents[]", type: :file, multiple: true %>
      <div class="form-actions">
        <%= f.submit 'Upload', :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<hr/>

<div class="row ">
  <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
    <div class="table-responsive">
      <h1>Documents</h1>
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>File Name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @employee.documents.each do |document| %>
            <tr>
              <td><%=  document.document_file_name %></td>
              <% if current_employee.user_role != 'employee' %>
                <td><%= link_to 'download', download_document_path(document), target: "blank" %></td>
                <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>